{% comment %}
  Section: Hero (inspiré de la capture) + bandeau logos défilant
  Fichier: sections/hero-choice-with-logos.liquid
{% endcomment %}

<section id="HeroChoice-{{ section.id }}" class="hc">
  <style>
    /* ============== Scoped styles (no leak) ============== */
    #HeroChoice-{{ section.id }}{
      --hc-bg: #fbfaff;
      --hc-blob: #f1ecff;
      --hc-text: #1c1033;
      --hc-muted: rgba(28,16,51,.68);
      --hc-card: #f3efff;
      --hc-card-2: #eee9ff;
      --hc-purple: #5b2dfb;
      --hc-purple-2: #6b3cff;
      --hc-line: rgba(28,16,51,.18);
      --hc-shadow: 0 18px 40px rgba(18, 10, 30, .10);
      --hc-shadow-soft: 0 12px 28px rgba(18, 10, 30, .10);
      --hc-radius-lg: 26px;
      --hc-radius-md: 18px;
      --hc-radius-sm: 14px;
      background: var(--hc-bg);
      position: relative;
      overflow: hidden;
    }

    /* Background blob (soft curve feel) */
    #HeroChoice-{{ section.id }} .hc__blob{
      position: absolute;
      inset: -40% -25% auto -35%;
      height: 520px;
      background:
        radial-gradient(1200px 420px at 70% 45%, var(--hc-blob) 0%, rgba(241,236,255,0) 70%);
      transform: rotate(-6deg);
      pointer-events: none;
      z-index: 0;
    }

    #HeroChoice-{{ section.id }} .hc__wrap{
      max-width: 1200px;
      margin: 0 auto;
      padding: 56px 22px 10px;
      position: relative;
      z-index: 1;
    }

    #HeroChoice-{{ section.id }} .hc__grid{
      display: grid;
      grid-template-columns: 1.05fr .95fr;
      gap: 42px;
      align-items: center;
    }

    /* Left */
    #HeroChoice-{{ section.id }} .hc__rating{
      display: inline-flex;
      align-items: center;
      gap: 10px;
      justify-content: center;
      margin: 0 auto 14px;
      color: rgba(28,16,51,.72);
      font-size: 13px;
      letter-spacing: .2px;
      width: 100%;
    }
    #HeroChoice-{{ section.id }} .hc__rating svg{ display:block; }

    #HeroChoice-{{ section.id }} .hc__left{
      text-align: center;
    }

    #HeroChoice-{{ section.id }} .hc__h1{
      margin: 0 auto 14px;
      max-width: 640px;
      color: var(--hc-text);
      font-weight: 600;
      line-height: 1.02;
      font-size: clamp(34px, 3.6vw, 58px);
      letter-spacing: -0.5px;
      font-family: ui-serif, "New York", "Iowan Old Style", Georgia, serif;
    }

    #HeroChoice-{{ section.id }} .hc__question{
      margin: 0 auto 18px;
      max-width: 520px;
      color: var(--hc-text);
      font-size: 17px;
      line-height: 1.35;
      font-weight: 500;
      font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Arial, "Helvetica Neue", sans-serif;
    }

    #HeroChoice-{{ section.id }} .hc__options{
      display: grid;
      grid-template-columns: repeat(6, 1fr);
      gap: 14px;
      max-width: 560px;
      margin: 0 auto 22px;
    }

    /* top row = 2 big cards (span 3 each), bottom row = 3 cards (span 2 each) */
    #HeroChoice-{{ section.id }} .hc__opt[data-span="3"]{ grid-column: span 3; }
    #HeroChoice-{{ section.id }} .hc__opt[data-span="2"]{ grid-column: span 2; }

    #HeroChoice-{{ section.id }} .hc__opt{
      background: linear-gradient(180deg, var(--hc-card) 0%, var(--hc-card-2) 100%);
      border-radius: var(--hc-radius-md);
      padding: 14px 14px 16px;
      box-shadow: 0 1px 0 rgba(28,16,51,.06) inset;
      cursor: pointer;
      user-select: none;
      border: 1px solid rgba(28,16,51,.08);
      transition: transform .12s ease, box-shadow .12s ease, border-color .12s ease, background .12s ease;
      display: grid;
      grid-template-rows: auto 1fr;
      min-height: 92px;
      position: relative;
      outline: none;
    }

    #HeroChoice-{{ section.id }} .hc__opt:hover{
      transform: translateY(-1px);
      box-shadow: 0 18px 34px rgba(18,10,30,.10);
      border-color: rgba(91,45,251,.22);
    }

    #HeroChoice-{{ section.id }} .hc__opt[aria-pressed="true"]{
      border-color: rgba(91,45,251,.55);
      box-shadow: 0 18px 34px rgba(91,45,251,.14);
      background: linear-gradient(180deg, rgba(91,45,251,.12) 0%, rgba(241,236,255,.95) 100%);
    }

    #HeroChoice-{{ section.id }} .hc__optTop{
      display:flex;
      align-items:flex-start;
      justify-content: space-between;
      gap: 10px;
    }

    #HeroChoice-{{ section.id }} .hc__check{
      width: 15px; height: 15px;
      border-radius: 4px;
      border: 1.6px solid rgba(28,16,51,.35);
      background: rgba(255,255,255,.55);
      display:inline-flex;
      align-items:center;
      justify-content:center;
      margin-top: 2px;
      flex: 0 0 auto;
    }
    #HeroChoice-{{ section.id }} .hc__opt[aria-pressed="true"] .hc__check{
      border-color: rgba(91,45,251,.9);
      background: rgba(91,45,251,.10);
    }
    #HeroChoice-{{ section.id }} .hc__check svg{
      width: 12px; height: 12px;
      opacity: 0;
      transform: scale(.9);
      transition: opacity .12s ease, transform .12s ease;
      color: var(--hc-purple);
    }
    #HeroChoice-{{ section.id }} .hc__opt[aria-pressed="true"] .hc__check svg{
      opacity: 1;
      transform: scale(1);
    }

    #HeroChoice-{{ section.id }} .hc__icon{
      width: 26px; height: 26px;
      color: rgba(28,16,51,.75);
      flex: 0 0 auto;
      margin-left: auto;
    }

    #HeroChoice-{{ section.id }} .hc__label{
      margin-top: 10px;
      color: rgba(28,16,51,.82);
      font-size: 13.5px;
      line-height: 1.2;
      font-weight: 500;
      max-width: 220px;
      margin-left: auto;
      margin-right: auto;
    }

    #HeroChoice-{{ section.id }} .hc__cta{
      display:flex;
      flex-direction: column;
      align-items: center;
      gap: 12px;
      margin-top: 6px;
    }

    #HeroChoice-{{ section.id }} .hc__btn{
      background: linear-gradient(180deg, var(--hc-purple) 0%, var(--hc-purple-2) 100%);
      color: white;
      border: none;
      padding: 14px 28px;
      border-radius: 999px;
      font-size: 14px;
      font-weight: 700;
      letter-spacing: .1px;
      box-shadow: 0 18px 36px rgba(91,45,251,.26);
      transition: transform .12s ease, box-shadow .12s ease, filter .12s ease;
      text-decoration: none;
      display:inline-flex;
      align-items:center;
      justify-content:center;
      min-width: 280px;
    }
    #HeroChoice-{{ section.id }} .hc__btn:hover{
      transform: translateY(-1px);
      box-shadow: 0 22px 44px rgba(91,45,251,.30);
      filter: saturate(1.02);
    }

    #HeroChoice-{{ section.id }} .hc__demo{
      color: rgba(28,16,51,.75);
      font-weight: 600;
      font-size: 13px;
      text-decoration: underline;
      text-underline-offset: 3px;
    }

    /* Right image + overlays */
    #HeroChoice-{{ section.id }} .hc__right{
      display:flex;
      justify-content: center;
    }

    #HeroChoice-{{ section.id }} .hc__imgWrap{
      width: min(520px, 100%);
      aspect-ratio: 1 / 1;
      border-radius: 34px;
      overflow: hidden;
      position: relative;
      box-shadow: var(--hc-shadow);
      background: #eee;
    }

    #HeroChoice-{{ section.id }} .hc__imgWrap img{
      width: 100%;
      height: 100%;
      object-fit: cover;
      display:block;
    }

    #HeroChoice-{{ section.id }} .hc__overlayCard{
      position: absolute;
      left: -38px;
      top: 120px;
      width: 250px;
      background: rgba(255,255,255,.96);
      border-radius: 14px;
      box-shadow: var(--hc-shadow-soft);
      border: 1px solid rgba(28,16,51,.10);
      overflow: hidden;
      backdrop-filter: blur(8px);
    }

    #HeroChoice-{{ section.id }} .hc__tag{
      display:inline-flex;
      align-items:center;
      gap: 8px;
      background: rgba(91,45,251,.95);
      color: white;
      font-weight: 700;
      font-size: 11px;
      padding: 6px 10px;
      border-radius: 8px;
      margin: 12px 12px 8px;
    }

    #HeroChoice-{{ section.id }} .hc__cardBody{
      padding: 0 12px 12px;
      color: var(--hc-text);
      font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Arial, "Helvetica Neue", sans-serif;
    }

    #HeroChoice-{{ section.id }} .hc__route{
      font-size: 26px;
      font-weight: 900;
      letter-spacing: -0.4px;
      margin: 0 0 8px;
    }

    #HeroChoice-{{ section.id }} .hc__small{
      display:flex;
      align-items:center;
      gap: 8px;
      color: rgba(28,16,51,.60);
      font-weight: 600;
      font-size: 12px;
      margin-bottom: 12px;
    }

    #HeroChoice-{{ section.id }} .hc__rows{
      display:grid;
      gap: 10px;
      font-size: 12px;
      color: rgba(28,16,51,.72);
      font-weight: 700;
    }
    #HeroChoice-{{ section.id }} .hc__row{
      display:flex;
      align-items:center;
      justify-content: space-between;
      gap: 12px;
    }
    #HeroChoice-{{ section.id }} .hc__price{
      color: rgba(28,16,51,.75);
      font-weight: 800;
    }
    #HeroChoice-{{ section.id }} .hc__pill{
      display:inline-flex;
      align-items:center;
      gap: 6px;
      color: rgba(28,16,51,.55);
      font-weight: 700;
      font-size: 11px;
    }
    #HeroChoice-{{ section.id }} .hc__policy{
      display:inline-flex;
      align-items:center;
      gap: 6px;
      color: rgba(91,45,251,.85);
      font-weight: 800;
      font-size: 11px;
      margin-top: 10px;
    }

    #HeroChoice-{{ section.id }} .hc__toast{
      position: absolute;
      left: -22px;
      top: 340px;
      display:flex;
      align-items:center;
      gap: 10px;
      background: rgba(255,255,255,.96);
      border-radius: 12px;
      padding: 10px 12px;
      box-shadow: var(--hc-shadow-soft);
      border: 1px solid rgba(28,16,51,.10);
      backdrop-filter: blur(8px);
      max-width: 290px;
    }
    #HeroChoice-{{ section.id }} .hc__toastIcon{
      width: 30px; height: 30px;
      border-radius: 8px;
      background: rgba(91,45,251,.12);
      color: var(--hc-purple);
      display:flex;
      align-items:center;
      justify-content:center;
      font-weight: 900;
      font-family: ui-sans-serif, system-ui;
    }
    #HeroChoice-{{ section.id }} .hc__toastText{
      font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Arial, "Helvetica Neue", sans-serif;
      font-size: 12px;
      line-height: 1.1;
      color: rgba(28,16,51,.78);
      font-weight: 700;
    }
    #HeroChoice-{{ section.id }} .hc__toastText span{
      display:block;
      font-weight: 650;
      color: rgba(28,16,51,.55);
      margin-top: 2px;
    }

    /* Logo section */
    #HeroChoice-{{ section.id }} .hc__logos{
      padding: 22px 0 38px;
      max-width: 1200px;
      margin: 0 auto;
    }

    #HeroChoice-{{ section.id }} .hc__divider{
      display:flex;
      align-items:center;
      gap: 18px;
      padding: 0 22px;
      color: rgba(28,16,51,.62);
      font-weight: 700;
      font-size: 14px;
      justify-content: center;
      margin-top: 18px;
    }
    #HeroChoice-{{ section.id }} .hc__divider:before,
    #HeroChoice-{{ section.id }} .hc__divider:after{
      content:"";
      height: 1px;
      background: var(--hc-line);
      flex: 1 1 auto;
      max-width: 420px;
    }

    #HeroChoice-{{ section.id }} .hc__marquee{
      margin-top: 18px;
      overflow: hidden;
      padding: 0 22px;
    }
    #HeroChoice-{{ section.id }} .hc__track{
      display:flex;
      align-items:center;
      gap: 54px;
      width: max-content;
      animation: hc-marquee 26s linear infinite;
      will-change: transform;
    }
    #HeroChoice-{{ section.id }} .hc__logo{
      display:flex;
      align-items:center;
      justify-content:center;
      opacity: .75;
      filter: grayscale(100%);
      transition: opacity .12s ease, filter .12s ease;
      height: 26px;
    }
    #HeroChoice-{{ section.id }} .hc__logo:hover{
      opacity: .95;
      filter: grayscale(0%);
    }
    #HeroChoice-{{ section.id }} .hc__logo img{
      height: 100%;
      width: auto;
      display:block;
    }
    #HeroChoice-{{ section.id }} .hc__logoText{
      font-weight: 800;
      letter-spacing: .2px;
      color: rgba(28,16,51,.55);
      font-family: ui-sans-serif, system-ui;
      white-space: nowrap;
      font-size: 16px;
    }

    @keyframes hc-marquee {
      from { transform: translateX(0); }
      to   { transform: translateX(-50%); }
    }

    @media (prefers-reduced-motion: reduce){
      #HeroChoice-{{ section.id }} .hc__track{ animation: none; }
    }

    /* Responsive */
    @media (max-width: 980px){
      #HeroChoice-{{ section.id }} .hc__grid{
        grid-template-columns: 1fr;
        gap: 26px;
      }
      #HeroChoice-{{ section.id }} .hc__imgWrap{
        width: min(560px, 100%);
        border-radius: 28px;
      }
      #HeroChoice-{{ section.id }} .hc__overlayCard{ left: 10px; top: 14px; width: 250px; }
      #HeroChoice-{{ section.id }} .hc__toast{ left: 10px; top: auto; bottom: 14px; }
    }

    @media (max-width: 520px){
      #HeroChoice-{{ section.id }} .hc__wrap{ padding: 42px 16px 10px; }
      #HeroChoice-{{ section.id }} .hc__options{ gap: 10px; }
      #HeroChoice-{{ section.id }} .hc__opt{ padding: 12px; }
      #HeroChoice-{{ section.id }} .hc__btn{ min-width: 220px; }
      #HeroChoice-{{ section.id }} .hc__divider{ font-size: 13px; }
      #HeroChoice-{{ section.id }} .hc__track{ gap: 36px; }
    }
  </style>

  <div class="hc__blob" aria-hidden="true"></div>

  <div class="hc__wrap">
    <div class="hc__grid">
      <!-- LEFT -->
      <div class="hc__left">
        <div class="hc__rating" aria-label="Note et avis">
          <!-- simple “badge + stars” -->
          <svg width="18" height="18" viewBox="0 0 24 24" aria-hidden="true" fill="none">
            <path d="M12 3a9 9 0 1 0 9 9" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
            <path d="M21 3v6h-6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>

          <span style="display:inline-flex; gap:3px; align-items:center;">
            {% for i in (1..5) %}
              <svg width="14" height="14" viewBox="0 0 24 24" aria-hidden="true" fill="currentColor" style="opacity:.75">
                <path d="M12 17.3 18.2 21l-1.6-7 5.4-4.7-7.1-.6L12 2 9.1 8.7 2 9.3 7.4 14l-1.6 7z"/>
              </svg>
            {% endfor %}
          </span>

          <span>{{ section.settings.rating_text }}</span>
        </div>

        <h1 class="hc__h1">{{ section.settings.heading }}</h1>
        <div class="hc__question">{{ section.settings.question }}</div>

        <div class="hc__options" role="group" aria-label="Choix d'utilisation">
          {% assign idx = 0 %}
          {% for block in section.blocks %}
            {% if block.type == "option" %}
              {% assign idx = idx | plus: 1 %}
              {% assign span = block.settings.span %}
              <button
                class="hc__opt"
                type="button"
                data-span="{{ span }}"
                aria-pressed="false"
                data-value="{{ block.settings.label | escape }}"
                {{ block.shopify_attributes }}
              >
                <div class="hc__optTop">
                  <span class="hc__check" aria-hidden="true">
                    <svg viewBox="0 0 24 24" fill="none">
                      <path d="M20 6L9 17l-5-5" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                  </span>

                  <span class="hc__icon" aria-hidden="true">
                    {% case block.settings.icon %}
                      {% when "plane" %}
                        <svg viewBox="0 0 24 24" fill="none">
                          <path d="M2 16l20-6-20-6 4 6-4 6Z" stroke="currentColor" stroke-width="1.8" stroke-linejoin="round"/>
                          <path d="M6 12h10" stroke="currentColor" stroke-width="1.8" stroke-linecap="round"/>
                        </svg>
                      {% when "card" %}
                        <svg viewBox="0 0 24 24" fill="none">
                          <rect x="3" y="6" width="18" height="12" rx="2.5" stroke="currentColor" stroke-width="1.8"/>
                          <path d="M3 10h18" stroke="currentColor" stroke-width="1.8"/>
                          <path d="M7 15h4" stroke="currentColor" stroke-width="1.8" stroke-linecap="round"/>
                        </svg>
                      {% when "team" %}
                        <svg viewBox="0 0 24 24" fill="none">
                          <path d="M16 11a4 4 0 1 0-8 0" stroke="currentColor" stroke-width="1.8" stroke-linecap="round"/>
                          <path d="M4 21a8 8 0 0 1 16 0" stroke="currentColor" stroke-width="1.8" stroke-linecap="round"/>
                          <path d="M19 8.5a3 3 0 0 1 0 5" stroke="currentColor" stroke-width="1.8" stroke-linecap="round"/>
                        </svg>
                      {% when "person" %}
                        <svg viewBox="0 0 24 24" fill="none">
                          <circle cx="12" cy="8" r="4" stroke="currentColor" stroke-width="1.8"/>
                          <path d="M4 21a8 8 0 0 1 16 0" stroke="currentColor" stroke-width="1.8" stroke-linecap="round"/>
                        </svg>
                      {% else %}
                        <svg viewBox="0 0 24 24" fill="none">
                          <path d="M12 3v18" stroke="currentColor" stroke-width="1.8" stroke-linecap="round"/>
                          <path d="M3 12h18" stroke="currentColor" stroke-width="1.8" stroke-linecap="round"/>
                        </svg>
                    {% endcase %}
                  </span>
                </div>

                <div class="hc__label">{{ block.settings.label }}</div>
              </button>
            {% endif %}
          {% endfor %}
        </div>

        <div class="hc__cta">
          {% if section.settings.cta_link != blank %}
            <a class="hc__btn" href="{{ section.settings.cta_link }}">{{ section.settings.cta_label }}</a>
          {% else %}
            <a class="hc__btn" href="#">{{ section.settings.cta_label }}</a>
          {% endif %}

          {% if section.settings.demo_link != blank %}
            <a class="hc__demo" href="{{ section.settings.demo_link }}">{{ section.settings.demo_label }}</a>
          {% else %}
            <span class="hc__demo">{{ section.settings.demo_label }}</span>
          {% endif %}
        </div>

        <!-- Optional hidden field if you want to capture choices in a form later -->
        <input type="hidden" name="hc_choices_{{ section.id }}" class="hc__hidden" value="">
      </div>

      <!-- RIGHT -->
      <div class="hc__right">
        <div class="hc__imgWrap">
          {% if section.settings.hero_image != blank %}
            {{ section.settings.hero_image | image_url: width: 1200 | image_tag: loading: 'lazy', alt: section.settings.hero_image_alt }}
          {% else %}
            <img
  src="https://cdn.shopify.com/s/files/1/0000/0000/files/placeholder.jpg"
  alt="Visuel"
  loading="lazy"
  width="1200"
  height="1200"
/>

          {% endif %}

          <div class="hc__overlayCard" aria-hidden="true">
            <div class="hc__tag">
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" aria-hidden="true">
                <path d="M4 7h16" stroke="white" stroke-width="2" stroke-linecap="round"/>
                <path d="M7 4h10" stroke="white" stroke-width="2" stroke-linecap="round"/>
                <rect x="4" y="6" width="16" height="14" rx="3" stroke="white" stroke-width="2"/>
              </svg>
              {{ section.settings.overlay_tag }}
            </div>
            <div class="hc__cardBody">
              <div class="hc__route">{{ section.settings.overlay_route }}</div>
              <div class="hc__small">
                <span style="display:inline-flex; align-items:center; gap:6px;">
                  <span style="width:10px; height:10px; border-radius:999px; background:rgba(255,0,0,.85); display:inline-block;"></span>
                  {{ section.settings.overlay_airline }}
                </span>
              </div>

              <div class="hc__rows">
                <div class="hc__row">
                  <span>{{ section.settings.overlay_row1_left }}</span>
                  <span class="hc__price">{{ section.settings.overlay_row1_right }}</span>
                  <span class="hc__pill">
                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" aria-hidden="true">
                      <path d="M12 2l7 4v6c0 5-3 9-7 10-4-1-7-5-7-10V6l7-4Z" stroke="currentColor" stroke-width="2"/>
                      <path d="M9.5 12l1.8 1.8L14.8 10" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                    {{ section.settings.overlay_row1_badge }}
                  </span>
                </div>

                <div class="hc__row">
                  <span>{{ section.settings.overlay_row2_left }}</span>
                  <span class="hc__price">{{ section.settings.overlay_row2_right }}</span>
                  <span class="hc__pill">{{ section.settings.overlay_row2_badge }}</span>
                </div>
              </div>

              <div class="hc__policy">
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" aria-hidden="true">
                  <path d="M20 6L9 17l-5-5" stroke="currentColor" stroke-width="2.6" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
                {{ section.settings.overlay_policy }}
              </div>
            </div>
          </div>

          <div class="hc__toast" aria-hidden="true">
            <div class="hc__toastIcon">{{ section.settings.toast_icon }}</div>
            <div class="hc__toastText">
              {{ section.settings.toast_title }}
              <span>{{ section.settings.toast_subtitle }}</span>
            </div>
          </div>

        </div>
      </div>
    </div>

    {% if section.settings.show_logos %}
      <div class="hc__logos">
        <div class="hc__divider">{{ section.settings.logos_title }}</div>

        <div class="hc__marquee" aria-label="Logos clients">
          <div class="hc__track">
            {% assign logo_blocks = section.blocks | where: "type", "logo" %}

            {% for pass in (1..2) %}
              {% for block in logo_blocks %}
                <div class="hc__logo" {{ block.shopify_attributes }}>
                  {% if block.settings.logo_image != blank %}
                    {{ block.settings.logo_image | image_url: width: 240 | image_tag: loading: 'lazy', alt: block.settings.alt }}
                  {% else %}
                    <span class="hc__logoText">{{ block.settings.text_fallback }}</span>
                  {% endif %}
                </div>
              {% endfor %}
            {% endfor %}
          </div>
        </div>
      </div>
    {% endif %}
  </div>

  <script>
    (function(){
      const root = document.getElementById('HeroChoice-{{ section.id }}');
      if(!root) return;

      const opts = root.querySelectorAll('.hc__opt');
      const hidden = root.querySelector('.hc__hidden');

      opts.forEach(btn => {
        btn.addEventListener('click', () => {
          const pressed = btn.getAttribute('aria-pressed') === 'true';
          btn.setAttribute('aria-pressed', String(!pressed));

          // store selections in hidden field (comma separated)
          if(hidden){
            const selected = Array.from(opts)
              .filter(x => x.getAttribute('aria-pressed') === 'true')
              .map(x => x.dataset.value)
              .filter(Boolean);
            hidden.value = selected.join(', ');
          }
        });
      });
    })();
  </script>
</section>

