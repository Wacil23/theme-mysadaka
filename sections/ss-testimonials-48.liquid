  assign subcopy_author_font = section.settings.subcopy_author_font
  assign subcopy_author_size = section.settings.subcopy_author_size
  assign subcopy_author_size_mobile = section.settings.subcopy_author_size_mobile
  assign subcopy_author_height = section.settings.subcopy_author_height
  assign subcopy_author_color = section.settings.subcopy_author_color
  assign subcopy_author_mt = section.settings.subcopy_author_mt
  assign subcopy_author_mt_mobile = section.settings.subcopy_author_mt_mobile
  assign subcopy_text_length = section.settings.subcopy_text_length

  assign author_image_size = section.settings.author_image_size
  assign author_image_size_mobile = section.settings.author_image_size_mobile
