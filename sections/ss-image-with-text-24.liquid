<script>
  function initImageWithText24{{ section.id | replace: '-', '' }}() {
    const wrapElement = document.querySelector('.image-with-text-wrap-{{ section.id }}');
    if (!wrapElement) return;

    let currentMode = null;
    let scrollHandler = null;

    function cleanupHandlers() {
      if (scrollHandler) {
        window.removeEventListener('scroll', scrollHandler);
        scrollHandler = null;
      }
    }

    function resetMobileStyles() {
      const progressBarBg = document.querySelector('.image-with-text-progress-bar-background-{{ section.id }}');
      const progressBarProgress = document.querySelector('.image-with-text-progress-bar-progress-{{ section.id }}');
      
      if (progressBarBg) progressBarBg.style.background = '';
      if (progressBarProgress) progressBarProgress.style.background = '';
    }

    function resetDesktopStyles() {
      const progressBar = wrapElement.querySelector('.image-with-text-progress-bar-progress-{{ section.id }}');
      const dots = wrapElement.querySelectorAll('.image-with-text-item-dot-{{ section.id }}');
      const items = wrapElement.querySelectorAll('.image-with-text-item-{{ section.id }}');
      
      if (progressBar) progressBar.style.height = '';
      
      dots.forEach((dot) => {
        dot.style.opacity = '';
      });
      
      items.forEach((item) => {
        const itemHeading = item.querySelector('.image-with-text-item-heading-{{ section.id }}');
        const itemText = item.querySelector('.image-with-text-item-text-{{ section.id }}');
        if (itemHeading) itemHeading.style.opacity = '';
        if (itemText) itemText.style.opacity = '';
      });
    }

    function updateMobileProgressBar() {
      if (window.innerWidth >= 1024) return;

      const progressBarBg = document.querySelector('.image-with-text-progress-bar-background-{{ section.id }}');
      const progressBarProgress = document.querySelector('.image-with-text-progress-bar-progress-{{ section.id }}');
      const itemWraps = document.querySelectorAll('.image-with-text-item-wrap-{{ section.id }}');
      const progressBarElement = document.querySelector('.image-with-text-progress-bar-{{ section.id }}');
      
      if (!progressBarBg || !progressBarElement || itemWraps.length === 0) return;

      const progressBarRect = progressBarElement.getBoundingClientRect();
      const progressBarTop = progressBarRect.top + window.scrollY;
      const progressBarHeight = progressBarRect.height;

      let gradientStops = [];
      let currentPosition = 0;

      itemWraps.forEach((wrap) => {
        const wrapRect = wrap.getBoundingClientRect();
        const wrapTop = wrapRect.top + window.scrollY;
        const wrapBottom = wrapTop + wrapRect.height;

        const startPercent = Math.max(0, ((wrapTop - progressBarTop) / progressBarHeight) * 100);
        const endPercent = Math.min(100, ((wrapBottom - progressBarTop) / progressBarHeight) * 100);

        if (currentPosition < startPercent) {
          gradientStops.push(`{{ progress_bar_bg }} ${currentPosition}%`);
          gradientStops.push(`{{ progress_bar_bg }} ${startPercent}%`);
        }

        gradientStops.push(`transparent ${startPercent}%`);
        gradientStops.push(`transparent ${endPercent}%`);

        currentPosition = endPercent;
      });

      if (currentPosition < 100) {
        gradientStops.push(`{{ progress_bar_bg }} ${currentPosition}%`);
        gradientStops.push(`{{ progress_bar_bg }} 100%`);
      }

      const gradient = `linear-gradient(to bottom, ${gradientStops.join(', ')})`;
      progressBarBg.style.background = gradient;

      if (progressBarProgress) {
        progressBarProgress.style.background = gradient;
      }
    }

    function updateDesktopProgress() {
      if (window.innerWidth < 1024) return;

      const progressBar = wrapElement.querySelector('.image-with-text-progress-bar-progress-{{ section.id }}');
      const progressBarBg = wrapElement.querySelector('.image-with-text-progress-bar-background-{{ section.id }}');
      const dots = wrapElement.querySelectorAll('.image-with-text-item-dot-{{ section.id }}');
      const items = wrapElement.querySelectorAll('.image-with-text-item-{{ section.id }}');

      if (!progressBar || !progressBarBg || dots.length === 0) return;

      const progressBarBgRect = progressBarBg.getBoundingClientRect();
      const dotsPositions = [];
      
      dots.forEach((dot) => {
        const dotRect = dot.getBoundingClientRect();
        const relativeTop = dotRect.top + (dotRect.height / 2) - progressBarBgRect.top;
        dotsPositions.push(relativeTop);
      });

      const wrapRect = wrapElement.getBoundingClientRect();
      const windowHeight = window.innerHeight;
      const midScreen = windowHeight / 1.5;
      
      const wrapTop = wrapRect.top;
      const wrapBottom = wrapRect.bottom;
      const wrapHeight = wrapRect.height;
      
      let progressHeight;
      
      if (wrapBottom <= midScreen) {
        progressHeight = 100;
      } else if (wrapTop >= midScreen) {
        progressHeight = 0;
      } else {
        const distanceFromTopToMid = midScreen - wrapTop;
        const scrollProgress = Math.max(0, Math.min(1, distanceFromTopToMid / wrapHeight));
        progressHeight = scrollProgress * 100;
      }
      
      const progressBarHeight = progressBarBgRect.height;
      const currentProgressPx = (progressHeight / 100) * progressBarHeight;
      
      progressBar.style.height = `${progressHeight}%`;

      let activeIndex = 0;
      
      dots.forEach((dot, index) => {
        const item = items[index];
        const itemHeading = item ? item.querySelector('.image-with-text-item-heading-{{ section.id }}') : null;
        const itemText = item ? item.querySelector('.image-with-text-item-text-{{ section.id }}') : null;
        
        if (currentProgressPx >= dotsPositions[index]) {
          dot.style.opacity = '1';
          if (itemHeading) itemHeading.style.opacity = '1';
          if (itemText) itemText.style.opacity = '1';
          activeIndex = index;
        } else {
          dot.style.opacity = '0.5';
          if (itemHeading) itemHeading.style.opacity = '0.5';
          if (itemText) itemText.style.opacity = '0.5';
        }
      });
    }

    function initMobile() {
      resetDesktopStyles();
      updateMobileProgressBar();
      scrollHandler = updateMobileProgressBar;
      window.addEventListener('scroll', scrollHandler);
    }

    function initDesktop() {
      resetMobileStyles();
      
      const dots = wrapElement.querySelectorAll('.image-with-text-item-dot-{{ section.id }}');
      const items = wrapElement.querySelectorAll('.image-with-text-item-{{ section.id }}');
      
      if (dots[0]) {
        dots[0].style.opacity = '1';
        const firstItemHeading = items[0] ? items[0].querySelector('.image-with-text-item-heading-{{ section.id }}') : null;
        const firstItemText = items[0] ? items[0].querySelector('.image-with-text-item-text-{{ section.id }}') : null;
        if (firstItemHeading) firstItemHeading.style.opacity = '1';
        if (firstItemText) firstItemText.style.opacity = '1';
      }
      
      scrollHandler = updateDesktopProgress;
      window.addEventListener('scroll', scrollHandler);
      updateDesktopProgress();
    }

    function handleResize() {
      const newMode = window.innerWidth >= 1024 ? 'desktop' : 'mobile';
      
      if (newMode === currentMode) return;
      
      cleanupHandlers();
      currentMode = newMode;
      
      if (currentMode === 'desktop') {
        initDesktop();
      } else {
        initMobile();
      }
    }

    currentMode = window.innerWidth >= 1024 ? 'desktop' : 'mobile';
    
    if (currentMode === 'desktop') {
      initDesktop();
    } else {
      initMobile();
    }
    
    window.addEventListener('resize', handleResize);
  }

  document.addEventListener('DOMContentLoaded', initImageWithText24{{ section.id | replace: '-', '' }});

  if (Shopify.designMode) {
    document.addEventListener('shopify:section:unload', initImageWithText24{{ section.id | replace: '-', '' }});
